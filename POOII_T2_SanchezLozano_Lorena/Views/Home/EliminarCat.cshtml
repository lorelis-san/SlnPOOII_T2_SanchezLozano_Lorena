@model POOII_T2_SanchezLozano_Lorena.Models.Categorium
@{
    ViewData["Title"] = "EliminarCat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Está seguro de eliminar la categoría?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="EliminarCat" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdCategoria" />

            <div class="mb-2">
                <label class="form-label" asp-for="NombreCate">Nombre de la Categoría</label>
                <input class="form-control form-control-sm" asp-for="NombreCate" type="text" disabled />
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="Descripcion">Descripción </label>
                <input class="form-control form-control-sm" asp-for="Descripcion" type="text" disabled />
            </div>

            <div class="mb-2">
                <button class="btn btn-danger btn-sm m-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexCategoria" asp-controller="Home">Volver</a>
            </div>


        </form>
    </div>
</div>


