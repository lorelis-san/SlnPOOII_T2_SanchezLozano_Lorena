@model POOII_T2_SanchezLozano_Lorena.Models.Producto
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Está seguro de eliminar el producto?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdProducto" />

            <div class="mb-2">
                <label class="form-label" asp-for="NombrePro">Nombre del Producto</label>
                <input class="form-control form-control-sm" asp-for="NombrePro" type="text" disabled />
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="DescripcionPro">Descripción del producto</label>
                <input class="form-control form-control-sm" asp-for="DescripcionPro" type="text" disabled />
            </div>


            <div class="mb-2">
                <label class="form-label" asp-for="Stock">Stock </label>
                <input class="form-control form-control-sm" asp-for="Stock" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="Precio" type="text" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="IdCategoria">Categoría</label>
                <input class="form-control form-control-sm" asp-for="oCategoria.Descripcion" type="text" disabled />
            </div>


            <div class="mb-2">
                <button class="btn btn-danger btn-sm m-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>


        </form>
    </div>
</div>
