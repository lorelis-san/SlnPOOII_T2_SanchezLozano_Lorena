@model POOII_T2_SanchezLozano_Lorena.Models.ViewModels.CategoriaVM
@{
    ViewData["Title"] = "Categoria_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCategoria.IdCategoria == 0)
{
    <h1>Crear Categoría</h1>
}
else
{
    <h1>Editar Categoría</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Categoria_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oCategoria.IdCategoria" />

            <div class="mb-2">
                <label class="form-label" asp-for="oCategoria.NombreCate">Nombre de la Categoría</label>
                <input class="form-control form-control-sm" asp-for="oCategoria.NombreCate" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCategoria.Descripcion">Descripción de la Categoría:</label>
                <input class="form-control form-control-sm" asp-for="oCategoria.Descripcion" type="text" />
            </div>

            <input type="hidden" asp-for="oCategoria.FechaCreacionCat" />

            <div class="mb-2">
                @if (Model.oCategoria.IdCategoria == 0)
                {
                    <button class="btn btn-primary btn-sm m-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm m-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="IndexCategoria" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>


